<coadunation version="1" name="ServiceBroker">
    <beans>
        <bean>
            <interface>com.rift.coad.daemon.servicebroker.ServiceBroker</interface>
            <class>com.rift.coad.daemon.servicebroker.ServiceBrokerImpl</class>
            <bindName>ServiceBroker</bindName>
            <role>daemon</role>
            <transaction>true</transaction>
            <username>daemon</username>
        </bean>
    </beans>
</coadunation>
