/**
 * This is the flow responsible for removing a category
 */
@java("out")
@java("log")
@rdf("http://dipforge.sourceforge.net/schema/rdf/1.0/bss/Category#Category" "Category")
@store("store")
flow RemoveCatgory {
   def out
   def log
   def Category

   {
       store.remove(Category)
       log.info("The category [" + Category.name + "] has been removed")
   }
}
