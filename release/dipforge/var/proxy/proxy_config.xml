        <!-- The Sparql Query End Point -->
        <server className="net.sf.j2ep.servers.BaseServer"
                domainName="localhost:3330"
                path="/rdf"
                isRewriting="true">
                <rule className="net.sf.j2ep.rules.RewriteRule"
                    from="^/rdf/(.*)$"
                            to="/$1"
                            revertFrom="^(/rdf/|/)(.*)$"
                            revertTo="/$2"
                                    />
        </server>

        <server className="net.sf.j2ep.servers.BaseServer"
                domainName="localhost:8080"
                path="/DipforgeWeb/public"
                isRewriting="true">
                <rule className="net.sf.j2ep.rules.RewriteRule"
                    from="^/(.*)$"
                            to="/$1"
                            revertFrom="^(/DipforgeWeb/|/)(.*)$"
                            revertTo="/$2"
                                    />
        </server>
</config>
